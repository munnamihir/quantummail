{
  "manifest_version": 3,
  "name": "QuantumMail (Envelope Encryption)",
  "version": "0.2.0",
  "description": "Encrypt selected text into a secure link; decrypt via extension only.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "http://localhost:5173/*",
    "https://*.app.github.dev/*",
    "https://mail.google.com/*"
  ],
  "action": {
    "default_title": "QuantumMail",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "http://localhost:5173/*",
        "https://*.app.github.dev/*"
      ],
      "js": ["content.js"]
    }
  ]
}
