{
  "manifest_version": 3,
  "name": "QuantumMail (MVP)",
  "version": "0.3.0",
  "description": "Encrypt/decrypt selected text in Gmail/Outlook using a QuantumMail token.",
  "action": {
    "default_title": "QuantumMail",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.office.com/*",
    "https://outlook.live.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
